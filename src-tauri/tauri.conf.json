{
  "$schema": "https://schema.tauri.app/config/v2.json",
  "productName": "pomotention",
  "version": "0.2.1",
  "identifier": "com.pomotention.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pomotention",
        "width": 1000,
        "height": 600,
        "minWidth": 220,
        "minHeight": 140,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "frameworks": []
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "你的公钥",
      "endpoints": ["https://releases.myapp.com/latest.json"]
    }
  }
}
